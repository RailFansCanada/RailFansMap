{
  "$id": "https://map.railfans.ca/config.schema.json",
  "title": "Railmap Configuration",
  "description": "Map configuration for the RailFans Canada map",
  "type": "object",
  "properties": {
    "agencies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "bbox": {
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": { "type": "number" }
          },
          "data": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["bbox", "data", "name"]
      }
    },
    "regions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "location": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": { "type": "number" }
          },
          "title": {
            "type": "string"
          }
        },
        "required": ["location", "title"]
      }
    }
  }
}
